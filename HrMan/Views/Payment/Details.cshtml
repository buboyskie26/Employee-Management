                </div>
                <br /><br />

                <h3>Date and Hours</h3>
                <hr style="background-color:crimson" />
                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="PayMonth"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PayMonth" class="form-control" readonly   />
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="Year"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="TaxYear.YearOfTax" class="form-control" readonly  />
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="PayDate"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PayDate" class="form-control" readonly   />
                    </div>
                </div>
                <div class="form-row">
