                            <div class="col-md-8 ">
                                <table class="table   table-bordered ">
                                    <thead>
                                        <tr class="text-center">

                                            <th>
                                                Leave Types
                                            </th>
                                            <th>Remaining Leave</th>
                                            <th>Action</th>
