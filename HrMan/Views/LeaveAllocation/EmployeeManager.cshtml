@model EmpRoleIndexVM;
@{
    ViewData["Title"] = "Employee Manager";
}

@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor;
@using HrMan.Utility;
@using System.Security.Claims;
<h3 class="text-center mb-3">Manager Employees</h3>



<main class="container d-flex justify-content-center mx-auto h-100 align-items-center">


    <div class="mt-5 pt-5">


        <div class="row">
            <div class="col-md-12 text-center float-md-none mx-auto">
               @* <img src="https://mdbootstrap.com/img/Others/404_mdb.webp" alt="Error 404" class="img-fluid wow fadeIn">*@
            </div>
        </div>



       

    </div>

</main>






<div class="col-md-10 offset-md-3">
    <div class="row">

        @foreach (var item in Model.Employees)
        {
            @if (item != null)
            {


                <div class="col-md-12">
                    <!-- Profile Image -->
                    <div class="card card-primary card-outline col-md-6">
                        <div class="card-body box-profile">
                            <div class="text-center">
                               @* <img class="img-fluid img-circle" style="max-width:250px;" src="@Url.Content(item.ImageUrl)" alt="User profile picture">*@
                            </div>

                            <h3 class="profile-username text-center mt-4">
                                @item.Lastname @item.Firstname
                            </h3>
                            @if (@HttpContextAccessor.HttpContext.User.FindFirstValue(ClaimTypes.Role).Equals(Helper.SuperVisor))

                            {
                                <p class="text-muted text-center">@item.Role</p>

                            }




                            <a href="#" class="btn btn-primary btn-block"><b>View Details</b></a>
                        </div>







                    </div>


                </div>
            }

        }

    </div>
</div>

