@using Microsoft.AspNetCore.Http

@model EditRequest;
@inject IHttpContextAccessor HttpContextAccessor;
@using HrMan.Utility;
@using System.Security.Claims;
@{
    ViewData["Title"] = "Create";
}
 
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*   <div class="form-group">
            <label asp-for="LeaveTypeId" class="control-label"></label>
            @Html.DropDownListFor(q => q.LeaveTypeId, new SelectList(Model.LeaveTypes, "Value", "Text"), "Select Leave Type", new { @class = "form-control" })
        </div>*@

            <div class="form-group">
                <label class="control-label">Leave Name</label>
                <select asp-for="LeaveTypeId" asp-items="@ViewBag.leaveName" class="form-control"></select>
            </div>

            @if (HttpContextAccessor.HttpContext.User.FindFirstValue(ClaimTypes.Role).Equals(Helper.SuperVisor))
            {
                <div class="form-group">
                    <label asp-for="SuperVisorId" class="control-label"></label>
                    @Html.DropDownList("superVisorId", new SelectList(ViewBag.Supervisor, "Id", "Name"), new
                   {
                       @class = "form-control select2",
                       @onchange = "onDoctorChange()"

                   })

                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>

                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>

                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="RequestComments" class="control-label"></label>
                <textarea asp-for="RequestComments" class="form-control"></textarea>
                <span asp-validation-for="RequestComments" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Request Leave" class="btn btn-primary btn-block" />

            </div>
            <div>
                <a class="btn btn-secondary btn-block" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>

</div>

<div class="text-right pt-2">
    <p>@HttpContextAccessor.HttpContext.Session.GetString("ssuserName")`s account was logged in</p>

    <p></p>
</div>