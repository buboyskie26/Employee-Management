<h3 class="text-center">Summary</h3>
<br />
<table class="table table-responsive-md">
    <thead>
        <tr class="text-center">
            <th>
                Employee Name
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Leave Type
            </th>

            <th>
                Date Requested
            </th>
            <th>
                Action Date
            </th>
            <th>
                Approval Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveRequests)
        {
            <tr class="text-center">
                @if (@item.RequestingEmployee != null)
                {
                    <td>@item.RequestingEmployee.Lastname @item.RequestingEmployee.Firstname</td>

                }
                else
                {
                    <td>Not Available</td>
                }
                <td>@item.StartDate.ToLongDateString()</td>
                <td>@item.EndDate.ToLongDateString()</td>
                <td>@item.LeaveType.Name</td>
                <td>@item.DateRequested.ToLongDateString()</td>
                <td>
                    @if (item.Approved == null && item.Cancelled == true)
                    {


                        <span class="text-center btn-block bg-gradient-dark"><i class="fas fa-ban"></i> Pending</span>

                    }
                    else
                    {
                        <span class="text-center btn-block bg-github"><i class="fas fa-check"></i>  @item.DateActioned.ToLongDateString()</span>



                    }
                </td>
                <td>
                    @if (item.Cancelled == true && item.Approved == false)
                    {
                        <h6 class="text-center btn-block bg-secondary">Cancelled</h6>
                    }
                    else @if (item.Approved == true && item.Cancelled == false)
               {
                <span class="text-center btn-block bg-success">Approved</span>
            }
            else @if (item.Approved == false && item.Cancelled == false)
           {


            <span class="text-center btn-block bg-danger">Rejected</span>
        }
        else
        {
            <span class="text-center btn-block bg-warning">Pending</span>

        }
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-block btn-sm bg-gradient-gray-dark text-white" asp-route-id="@item.Id">
                        <i class="fa fa-search"></i> Review

                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
