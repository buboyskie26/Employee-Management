@model RequestCountVM;

@{
    ViewData["Title"] = "Index";
}

<div class="row ">

    <div class="col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-info"><i class="fas fa-tachometer-alt"></i></span>

            <div class="info-box-content">
                <h5 class="info-box-text text-center">@Model.TotalRequests</h5>
                <a asp-action="TotalEmployees">
                    <span class="info-box-number text-center">Total Request</span>

                </a>

            </div>
            <!-- /.info-box-content -->
        </div>

    </div>
    <div class="col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-warning"><i class="fas fa-exclamation-circle"></i></span>

            <div class="info-box-content">
                <h5 class="info-box-text text-center">@Model.PendingRequests</h5>
                <a asp-action="PendingIndex">
                    <span class="info-box-number text-center">Pending Request</span>
                </a>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-success"><i class="far fa-check-circle"></i></span>

            <div class="info-box-content">
                <h5 class="info-box-text text-center">@Model.ApproveRequests</h5>
                <a asp-action="ApproveIndex">
                    <span class="info-box-number text-center">Approved Request</span>


                </a>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>
    <div class="col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-danger"><i class="far fa-times-circle"></i></span>

            <div class="info-box-content">
                <h5 class="info-box-text text-center">@Model.RejectRequests</h5>
                <a asp-action="RejectedIndex">
                    <span class="info-box-number text-center">Rejected Request</span>

                </a>
            </div>
            <!-- /.info-box-content -->
        </div>


    </div>
</div>
